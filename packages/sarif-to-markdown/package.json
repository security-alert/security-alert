{
  "name": "@security-alert/sarif-to-markdown",
  "version": "1.3.0",
  "description": "Convert Sarif format to body text",
  "keywords": [
    "sarif",
    "security-alert",
    "codeql"
  ],
  "homepage": "https://github.com/azu/security-alert/tree/master/packages/sarif-to-markdown/",
  "bugs": {
    "url": "https://github.com/azu/security-alert/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/security-alert.git"
  },
  "license": "MIT",
  "author": "azu",
  "sideEffects": false,
  "main": "lib/sarif-to-markdown.js",
  "module": "module/sarif-to-markdown.js",
  "types": "lib/sarif-to-markdown.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "bin/",
    "lib/",
    "module"
  ],
  "scripts": {
    "build": "tsc -p . && tsc --project ./tsconfig.module.json",
    "clean": "rimraf lib/ module/",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepublish": "npm run --if-present build",
    "test": "mocha \"test/**/*.ts\"",
    "updateSnapshot": "UPDATE_SNAPSHOT=1 npm test",
    "watch": "tsc -p . --watch"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "dependencies": {
    "@types/sarif": "^2.1.2",
    "markdown-escape": "^1.1.0",
    "url-join": "^4.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.0.27",
    "@types/url-join": "^4.0.0",
    "mocha": "^8.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "ts-node-test-register": "^8.0.1",
    "typescript": "^3.9.7"
  },
  "publishConfig": {
    "access": "public"
  }
}
